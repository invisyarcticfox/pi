---
interface Props { name: string, status: 'online'|'offline'|'unknown' }
const { name, status='unknown' } = Astro.props
---

<div class='item'>
  <span class={`status ${status}`} title={status}>
    <svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
      <circle cx="256" cy="256" r="256" />
    </svg>
  </span>
  {name}
</div>